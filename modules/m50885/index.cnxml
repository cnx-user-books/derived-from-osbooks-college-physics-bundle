                        </m:mrow>
                      
                    </m:msup>
                  </m:mrow>
                  <m:mo stretchy="false">(</m:mo>
                  <m:mrow>
                    <m:msub>
                      <m:mi>v</m:mi>
                      
                        <m:mrow>
                          <m:mi>y</m:mi>
                        </m:mrow>
                      
                    </m:msub>
                    <m:mo stretchy="false">/</m:mo>
                    <m:msub>
                      <m:mi>v</m:mi>
                      
                        <m:mrow>
                          <m:mi>x</m:mi>
                        </m:mrow>
                      
                    </m:msub>
                  </m:mrow>
                  <m:mrow>
                    <m:mo stretchy="false">)</m:mo>
                    <m:mo stretchy="false">=</m:mo>
                    <m:msup>
                      <m:mtext>tan</m:mtext>
                      
                        <m:mrow>
                          <m:mrow>
                            <m:mo stretchy="false">−</m:mo>
                            <m:mn>1</m:mn>
                          </m:mrow>
                        </m:mrow>
                      
                    </m:msup>
                  </m:mrow>
                  <m:mrow>
                    <m:mo stretchy="false">(</m:mo>
                    <m:mo stretchy="false">−</m:mo>
                    <m:mn>5</m:mn>
                  </m:mrow>
